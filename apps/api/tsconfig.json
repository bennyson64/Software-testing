{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
